<style>

body {
	background-color: black;
}

img {
	width: 100%;
}

.logo {
	position: relative;
	z-index: 9999;
	margin-top:70%;
}

.logo img {
	margin: 0px auto 0 auto;
	text-align: center;
}

#scrollbar {
	position:fixed;
	right:2px;
	height:50px;
	width:6px;
	background:#444;
	background:rgba(0,0,0,0.6);
	border:1px solid rgba(255,255,255,0.6);
	z-index:9999;
	border-radius:3px;
	bottom: 0px;
}

.bokeh-foreground {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 100%;
	z-index: 9999;
}

</style>

	<div id="bg1" class="animated fadeInDown" data-0="background-position:-500px 0px;" data-6000="background-position:0px 0px;"></div>

	<div class="bokeh-foreground">
		<div data-50="top:100%;transform:scale(1);opacity:.3;transform:translate(100%,-90%);" data-6000="top:100%;transform:scale(1);opacity:.3;transform:translate(0,-90%);">
			<%= image_tag "bokeh2.png", width: "100%" %>
		</div>
	</div>

	<div class="logo">
		<div data-0="transform:scale(4);opacity:0;" data-5500="transform:scale(1);opacity:1;">
			<%= image_tag "hibbett-logo.svg", width: "100%" %>
		</div>
	</div>

	<div class="animated fadeIn" data-200="transform:translate(0,-90%);" data-6000="transform:translate(0, 500%);">
		<%= image_tag "GUYGIRL.png", width: "100%" %>
	</div>

	<div class="animated fadeIn" data-500="transform:translate(0,70%);" data-6000="transform:translate(0, -200%);">
		<%= image_tag "WHITEPEOPLE.png", width: "100%" %>
	</div>

	<div class="animated fadeIn" data-700="transform:translate(0,-600%);" data-6000="transform:translate(0, 200%);">
		<%= image_tag "BOY.png", width: "100%" %>
	</div>

	<div class="animated fadeIn" data-1000="transform:translate(0,-200%);" data-6000="transform:translate(0, 500%);">
		<%= image_tag "KIDS.png", width: "100%" %>
	</div>

	<div data-1400="transform:translate(0,600%);" data-6000="transform:translate(0, -80%);">
		<%= image_tag "SASS.png", width: "100%" %>
	</div>

	<div data-1400="transform:translate(0,-400%);" data-6000="transform:translate(0, 50%);">
		<%= image_tag "REDHOODIE.png", width: "100%" %>
	</div>

	<div id="scrollbar" data-0="top:0%;margin-top:2px;" data-end="top:100%;margin-top:-52px;"></div>

	<script type="text/javascript">
	skrollr.init({
		smoothScrolling: true,
		mobileDeceleration: 0.007
	});
	</script>